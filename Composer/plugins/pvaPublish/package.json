{
  "name": "plugin-pva-publish",
  "version": "1.0.0",
  "scripts": {
    "build": "yarn build:ui && yarn build:node",
    "build:ui": "webpack --config webpack.config.js",
    "build:node": "tsc --project tsconfig.node.json"
  },
  "composer": {
    "bundles": [
      {
        "id": "publish",
        "path": "dist/publish.js"
      }
    ],
    "contributes": {
      "views": {
        "publish": {
          "bundleId": "publish"
        }
      }
    }
  },
  "extendsComposer": true,
  "main": "dist/index.js",
  "dependencies": {
    "@bfc/client-plugin-lib": "file:../../packages/extensions/client-plugin-lib",
    "@uifabric/icons": "7.3.59",
    "@uifabric/react-hooks": "7.4.12",
    "office-ui-fabric-react": "7.121.11",
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  },
  "devDependencies": {
    "html-webpack-plugin": "^4.3.0",
    "ts-loader": "^8.0.0",
    "typescript": "^3.9.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  }
}
